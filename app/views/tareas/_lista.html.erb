<div class="container">  
      <%  if @tareas.empty? %>
        <span class="text-warning">No hay tareas</span>
      <% else %> 
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Titulo</th>
              <th scope="col">Creado</th>                   
              <th scope="col">Nota</th>
              <th scope="col">Accion</th>  
            </tr>   
          </thead>
        <tbody>
          <% @tareas.each do |tarea| %>
            <tr>
              <td><%= tarea.titulo %></td>
              <td><%= tarea.created_at %></td>                      
              <td><%= tarea.nota %></td>
              <td><%= link_to 'eliminar', tarea_path(tarea.id), method: :delete %><i class="icon-remove"></i></td>

            </tr>
        </tbody>      
          <% end %>
      <% end %>
      </table>
</div>                                                